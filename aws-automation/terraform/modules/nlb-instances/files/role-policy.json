{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "acm:*",
                "autoscaling:*",
                "apigateway:*",
                "application-autoscaling:DeleteScalingPolicy",
                "application-autoscaling:DeregisterScalableTarget",
                "application-autoscaling:DescribeScalableTargets",
                "application-autoscaling:DescribeScalingActivities",
                "application-autoscaling:DescribeScalingPolicies",
                "application-autoscaling:PutScalingPolicy",
                "application-autoscaling:RegisterScalableTarget",
                "aws-marketplace:*",
                "budgets:ViewBudget",
                "budgets:ModifyBudget",
                "cloudfront:*",
                "cloudtrail:*",
                "cloudwatch:*",
                "codebuild:CreateProject",
                "codebuild:DeleteProject",
                "codebuild:BatchGetBuilds",
                "codebuild:StartBuild",
                "codecommit:BatchGetRepositories",
                "codecommit:GetBranch",
                "codecommit:GetObjectIdentifier",
                "codecommit:GetRepository",
                "codecommit:List*",
                "codedeploy:Batch*",
                "codedeploy:Get*",
                "codedeploy:List*",
                "codepipeline:Get*",
                "codepipeline:List*",
                "config:Deliver*",
                "config:Describe*",
                "config:Get*",
                "cognito-identity:Describe*",
                "cognito-identity:Get*",
                "cognito-identity:List*",
                "cognito-idp:Describe*",
                "cognito-idp:AdminGetUser",
                "cognito-idp:List*",
                "cognito-sync:Describe*",
                "cognito-sync:Get*",
                "cognito-sync:List*",
                "devicefarm:*",
                "datapipeline:*",
                "directconnect:Describe*",
                "dynamodb:*",
                "ec2:*",
                "ecs:*",
                "ecr:*",
                "elasticache:*",
                "elasticbeanstalk:*",
                "elasticloadbalancing:*",
                "elasticmapreduce:*",
                "es:*",
                "firehose:Describe*",
                "firehose:List*",
                "iam:PassRole",
                "iam:GenerateCredentialReport",
                "iam:List*",
                "kms:Describe*",
                "kms:Get*",
                "kms:List*",
                "lambda:*",
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents",
                "rds:Describe*",
                "rds:ListTagsForResource",
                "redshift:Describe*",
                "redshift:ViewQueriesInConsole",
                "route53:Get*",
                "route53:List*",
                "route53:TestDNSAnswer",
                "s3:*",
                "sdb:DomainMetadata",
                "sdb:List*",
                "ses:Get*",
                "ses:List*",
                "sns:*",
                "sqs:*",
                "ssm:Describe*",
                "ssm:Get*",
                "ssm:List*",
                "swf:RegisterDomain",
                "swf:RegisterAction",
                "swf:DescribeAction",
                "swf:UpdateAction",
                "tag:GetResources",
                "tag:GetTagKeys",
                "trustedadvisor:*",
                "waf:*",
                "waf-regional:*"
            ],
            "Resource": "*",
            "Sid": "bastion"
        },
        {
            "Effect": "Allow",
            "Action": "sts:AssumeRole",
            "Resource": "arn:aws:iam::082894742960:role/{var.tr_env}-{var.app_name}-role",
            "Sid": "AssumeRole"
        }
    ]
}